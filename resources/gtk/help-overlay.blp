using Gtk 4.0;

Gtk.ShortcutsWindow help_overlay {
  modal: true;

  Gtk.ShortcutsSection {
    section-name: "shortcuts";

    Gtk.ShortcutsGroup {
      title: C_("shortcuts group title", "General");

     Gtk.ShortcutsShortcut {
        title: C_("shortcut description", "Show shortcuts");
        action-name: "win.show-help-overlay";
      }

      Gtk.ShortcutsShortcut {
        title: C_("shortcut description", "Quit application");
        action-name: "app.quit";
      }
    }

    Gtk.ShortcutsGroup {
      title: C_("shortcuts group title", "Windows");

      Gtk.ShortcutsShortcut {
        title: C_("shortcut description", "New window");
        action-name: "app.new-window";
      }
    }
  }
}
