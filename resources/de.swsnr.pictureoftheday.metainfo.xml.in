            <caption>The empty greeting page with the application icon</caption>
        </screenshot>
    </screenshots>
    <translation type="gettext">de.swsnr.pictureoftheday</translation>
    <content_rating type="oars-1.1" />
    <branding>
        <color type="primary" scheme_preference="light">#33d17a</color>
        <color type="primary" scheme_preference="dark">#26a269</color>
    </branding>
    <requires>
        <display_length compare="ge">768</display_length>
    </requires>
    <supports>
        <control>keyboard</control>
        <control>pointing</control>
        <control>touch</control>
    </supports>
</component>
